  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    :root {
      --bg: #0a0a0a;
      --text: #e8e0d4;
      --muted: #777;
      --accent: #c9a87c;
      --rule: #161616;
      --font-serif: 'Instrument Serif', Georgia, serif;
      --font-body: system-ui, -apple-system, 'Segoe UI', Roboto, sans-serif;
    }

    html { scroll-behavior: smooth; }

    body {
      background: var(--bg);
      color: var(--text);
      font-family: var(--font-body);
      font-size: 1.1rem;
      line-height: 1.8;
      -webkit-font-smoothing: antialiased;
    }

    ::selection {
      background: var(--accent);
      color: var(--bg);
    }

    a {
      color: var(--accent);
      text-decoration: none;
      transition: color 0.2s ease;
    }

    a:hover {
      text-decoration: underline;
      text-underline-offset: 3px;
      text-decoration-thickness: 1px;
    }

    /* ===== ENTRANCE ===== */
    @keyframes enter {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    /* ===== HERO ===== */
    .hero {
      min-height: 100vh;
      min-height: 100svh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: 4rem 2rem;
    }

    .portrait {
      width: 172px;
      height: 172px;
      border-radius: 50%;
      object-fit: cover;
      filter: grayscale(1) sepia(0.15) brightness(0.95);
      box-shadow: 0 0 40px rgba(201, 168, 124, 0.08);
      margin-bottom: 2.5rem;
      opacity: 0;
      animation: enter 0.8s ease 0.1s forwards;
      transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .portrait:hover {
      transform: scale(1.05);
    }

    .name {
      font-family: var(--font-serif);
      font-size: clamp(2.2rem, 9vw, 5.5rem);
      line-height: 1;
      font-weight: 400;
      letter-spacing: -0.02em;
      margin-bottom: 2rem;
      opacity: 0;
      animation: enter 0.8s ease 0.25s forwards;
    }

    .manifesto {
      font-family: var(--font-body);
      font-size: 0.85rem;
      letter-spacing: 0.12em;
      text-transform: uppercase;
      color: var(--muted);
      opacity: 0;
      animation: enter 0.8s ease 0.5s forwards;
    }

    /* ===== LAYOUT ===== */
    .content {
      max-width: 800px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    .divider {
      border: none;
      border-top: 1px solid var(--rule);
      margin: 0;
    }

    /* ===== SECTIONS ===== */
    .row {
      display: grid;
      grid-template-columns: 140px 1fr;
      gap: 2rem;
      padding: 4rem 0;
    }

    .row-label {
      font-size: 0.7rem;
      letter-spacing: 0.18em;
      text-transform: uppercase;
      color: var(--muted);
      padding-top: 0.35rem;
    }

    .row-body p {
      margin-bottom: 1.25rem;
    }

    .row-body p:last-child:not(.desc) {
      margin-bottom: 0;
    }

    /* ===== LINK ITEMS ===== */
    .link-items {
      margin-top: 1.5rem;
      display: flex;
      flex-direction: column;
      gap: 1.25rem;
    }

    .link-item a {
      font-weight: 500;
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;
    }

    .link-item a::after {
      content: '\2197';
      font-size: 0.75em;
      opacity: 0.4;
      transition: opacity 0.2s ease, transform 0.2s ease;
    }

    .link-item a:hover {
      text-decoration: none;
    }

    .link-item a:hover::after {
      opacity: 1;
      transform: translate(2px, -2px);
    }

    .link-item .desc {
      font-size: 0.92rem;
      color: var(--muted);
      margin-top: 0.25rem;
      margin-bottom: 0;
    }

    /* ===== FOOTER ===== */
    .footer-email {
      margin-bottom: 1rem;
    }

    .footer-nav {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      flex-wrap: wrap;
    }

    .footer-nav a {
      color: var(--muted);
      font-size: 0.85rem;
      transition: color 0.2s ease;
    }

    .footer-nav a:hover {
      color: var(--text);
      text-decoration: none;
    }

    .dot {
      color: #333;
      font-size: 0.6rem;
      user-select: none;
    }

    /* ===== EASTER EGG ===== */
    .egg {
      position: fixed;
      bottom: 1rem;
      left: 1rem;
      font-size: 0.5rem;
      color: #1a1a1a;
      cursor: pointer;
      transition: color 0.3s;
      user-select: none;
    }

    .egg:hover { color: var(--accent); }

    /* ===== RESPONSIVE ===== */
    @media (max-width: 600px) {
      .row {
        grid-template-columns: 1fr;
        gap: 0.75rem;
        padding: 3rem 0;
      }
      .row-label { padding-top: 0; }
      .link-items { margin-top: 1.25rem; }
    }

    @media (prefers-reduced-motion: reduce) {
      html { scroll-behavior: auto; }
      .portrait, .name, .manifesto {
        opacity: 1;
        animation: none;
      }
    }
  </style>
